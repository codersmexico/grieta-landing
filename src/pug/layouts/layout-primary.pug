doctype html
html(lang='en')
  head
    block title
      title #RevisaMiGrieta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    //- Favicons and Android NavBar Color
    meta(name='theme-color', content='#00467e')
    //- CSS Files
    if productionMode
      link(rel='stylesheet', href='assets/css/vendor.min.css')
      link(rel='stylesheet', href='assets/css/main.min.css')
    else
      link(rel='stylesheet', href='assets/css/vendor.css')
      link(rel='stylesheet', href='assets/css/main.css')
    block head
      //- If extra head content is necessary per page, it can be added per screen

  body
    include includes/mixins
    include general/menu
    block content
      //- This gets replaced by content per page

    include general/footer
    block footer
      //- If extra footer content is necessary per page, it can be added per screen

    if productionMode
      script(src='assets/js/vendor.min.js')
      script(src='assets/js/main.min.js')
    else
      script(src='assets/js/vendor.js')
      script(src='assets/js/main.js')

    script(async src="//platform.twitter.com/widgets.js" charset="utf-8")

    block scripts
      //- Also if more scripts are needed you can hook in here <3
